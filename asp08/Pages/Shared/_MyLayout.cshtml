<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - asp08</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" asp-page="Index">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-page="Privacy">Privacy</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-page="Post1">Post 1</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-page="Post2">Post 2</a>
            </li>
            </ul>
        </div>
        </nav>
    </header>
    <main class="bg-info pb-4">
        @RenderBody()
    </main>
    <footer class="bg-dark text-white">
        Footer
        @await RenderSectionAsync("Footer", required: false)
    </footer>

     @await RenderSectionAsync("Scripts", required: false) 
</body>
</html>