@model Phong.MessagePage.Message
@{
    Layout = "_Layout";
    ViewData["Title"] = @Model.Title;
}
<div class="card m-4">
    <div class="card-header bg-danger text-light">
        <h4>@Model.Title</h4>
    </div>
    <div class="card-body">
        @Html.Raw(Model.htmlContent)
    </div>
    <div class="cart-footer">
        Navigate to - <a href="@Model.urlRedirect">@Model.urlRedirect</a>
    </div>
</div>